<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <changeSet  id="1"  author="voronov">
        <createTable tableName="feed_posts">
            <column name="post_id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="post_text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="post_preview_text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="post_topic" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="post_state" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="author_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>            
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="feed_comments">
            <column name="comment_id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="comment_text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="comment_state" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="author_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="linked_comment_id" type="int">
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>         
            <dropTable tableName="feed"/>
            <dropTable tableName="comments"/>
        </rollback>
    </changeSet>
</databaseChangeLog>